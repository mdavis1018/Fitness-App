<h1 style="text-align:center">Workout Information</h1>
<h2 style="center"><%= @workout.title %></h2>

<div class="container text-center">
<div class="row row-cols-4 row-cols-md-2 g-4">
<% @workout.excercises.each do |idk| %>
<div class="col mb-4 d-flex align-items-stretch">
<div style="color:black">
        <div class="card h-100">
        <img src="<%= idk.image_url %>" class="card-img-top"
        alt="." />
        <h5 class="card-title">  <%= idk.name %> </h5>
          <div class="card-body"> <%= idk.description %>
          </div>
<div>
<a href="/workouts/<%= idk.id %>" class="btn btn-dark" data-turbo-method="delete" >Delete Exercise</a>
</div>
<% idk.workout_details.each do |details| %>
<p><%= details.weight %> lbs</p>
<p><%= details.reps %> reps </p>
</div>
</div>
      </div>
<% end %>
<% end %>
</div>
