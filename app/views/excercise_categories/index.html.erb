<div style="color:#FFFFFF">
<h1 >All Categories </h1>
</div>
<div class="container text-center">
<div class="row row-cols-4 row-cols-md-2 g-4">
  <% @excercise_category.each do |excercise_category| %>
      <div class="col mb-4 d-flex align-items-stretch">
        <div class="card h-100">
        <img src="<%= excercise_category.image_url %>" class="card-img-top"
        alt="." />
        <h5 class="card-title">  <%= excercise_category.title %> </h5>
          <div class="card-body"> <%= excercise_category.description %>
          <div style=align="left">
            <a href="/excercise_categories/<%= excercise_category.id %>" class= "btn btn-dark align-self-end">Exercises</a>
            </div>
          </div>
        </div>
      </div>
<% end %>
  </div>
</div>
</div>
 </div>